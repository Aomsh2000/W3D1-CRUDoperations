@model CRUDoperations.Models.Employee

@{
    ViewData["Title"] = "Delete Employee";
}

<h2>Are you sure you want to delete this employee?</h2>

<div>
    <h3>@Model.Name</h3>
    <p>Position: @Model.Position</p>
    <p>Salary: @Model.Salary</p>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a href="@Url.Action("Index", "Employee")" class="btn btn-secondary">Cancel</a>
</form>
